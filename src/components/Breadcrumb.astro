---
const { links } = Astro.props;
---

<nav aria-label="Breadcrumb" class="text-gray-600 text-sm mb-4">
  <ol class="inline-flex items-center space-x-1">
    {
      links.map((link, index) => (
        <li>
          <div class="flex items-center">
            {index !== 0 && (
              <svg
                class="h-4 w-4 text-gray-400 mx-1"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path d="M7.05 4.293a1 1 0 011.414 0L12 7.828a1 1 0 010 1.414l-3.536 3.536a1 1 0 01-1.414-1.414L9.172 10 7.05 7.879a1 1 0 010-1.414z" />
              </svg>
            )}
            {link.url ? (
              <a href={link.url} class="text-blue-600 hover:underline">
                {link.label}
              </a>
            ) : (
              <span class="text-gray-500">{link.label}</span>
            )}
          </div>
        </li>
      ))
    }
  </ol>
</nav>
